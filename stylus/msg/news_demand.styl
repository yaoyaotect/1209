$orange = #ED692B
body
  background-color #efefef
  font-size 13px
.tab_box
  height 32px
  padding 9px 0
  background-color #fff
  .tab-bar
    display flex
    width 80%
    height 30px
    margin 0 auto
    padding 0
    list-style none
    border-radius 5px
    border 1px solid $orange
    color $orange
    .tab-bar-cell
      position relative
      flex 1
      line-height 30px
      text-align center
      &:after
        content ''
        position absolute
        top 0
        right 0
        display block
        width 1px
        height 30px
        background-color $orange
      &:last-child:after
        content ''
        display none
      &.active
        background-color $orange
        color #fff

.demand_cells
  padding 10px

  .demand_cell
    width 100%
    min-height 119px
    border-radius 5px
    box-shadow 0 0 1px 1px #e0e0e0
    line-height 30px
    background-color #fff
    margin-bottom 10px
    .demand-title
      display flex
      height 30px
      padding 0 10px
      border-bottom 1px solid #cecece
      .d-t-name
        flex 1
      .d-t-tag
        display inline-block
        width 50px
        height 16px
        margin 7px 0
        padding 2px 0
        border-radius 5px
        background-color #15B755
        color #fff
        line-height 16px
        text-align center
        font-style normal
        font-size .6rem
      .blue
        background #0193E6
      .green
        background #97B715
      .organ
        background #EA5404

    .demand-info
      margin 0
      padding 10px 5px 5px 5px
      line-height 1.2em
      color #646464
      text-indent 2em
    .demand-footer
      display flex
      //height 20px
      padding 10px
      line-height 0
      .btn-detail
        width 100px
        height 27px
        border-radius 5px
        background-color #efefef
        color #646464
        text-align center
        border 1px solid #E1E1E1
        font-size 14px
      .text-time
        flex 1
        font-size .8rem
        font-style normal
        text-align right
        color #646464
